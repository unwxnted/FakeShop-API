generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  jwt      String?  @db.Text
  name     String?  @db.VarChar(255)
  password String   @db.VarChar(255)
  admin     Boolean
  orders    Order[]  // A user can have multiple orders
}

// This model represents a Product in the database
model Product {
  id      Int      @id @default(autoincrement())
  name    String
  stock   Int
  orders  Order[]  // A product can be part of multiple orders
}

// This model represents an Order in the database
model Order {
  id          Int      @id @default(autoincrement())
  date        DateTime
  quantity    Int
  userId      Int      // Foreign key reference to User table
  user        User     @relation(fields: [userId], references: [id])
  productId   Int      // Foreign key reference to Product table
  product     Product  @relation(fields: [productId], references: [id])
}